<%= form_for(@user) do |f| %>
   <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :graduation %><br />
    <%= f.number_field :graduation %>
  </div>
  <div class="field">
    <%= f.label :major1 %><br />
    <%= f.text_field :major1 %>
  </div>
  <div class="field">
    <%= f.label :major2 %><br />
    <%= f.text_field :major2 %>
  </div>
  <div class="field">
    <%= f.label :major3 %><br />
    <%= f.text_field :major3 %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
   <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
   </div>
  <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
<%end%>