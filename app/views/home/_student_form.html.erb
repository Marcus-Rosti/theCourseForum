<%= form_for @student do |f| %>
  <p>
    <%= f.label :first_name  %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name  %>
  	<%= f.text_field :last_name %>
  </p>
  <p>
	<%= f.label "Graduation Year:"  %>
	<%= f.select :grad_year, [[Time.now.year-4],[Time.now.year-3],[Time.now.year-2],[Time.now.year-1],[Time.now.year],[	Time.now.year+1],[Time.now.year+2],[Time.now.year+3],[Time.now.year+4]], :include_blank => true  %>
  </p>
  <hr />
  <%= fields_for @user do |u| %>
	<p>
      UVa Email Address:
	  <%= u.text_field :email %>
	</p>
	<p>
	  <%= u.label :password %>
	  <%= u.password_field :old_password %>
	</p>
	<p>
	  Password Confirm:
	  <%= u.password_field :old_password_confirmation %>
	</p>	
  <% end %>
  <p>
    <%= f.submit 'Sign Up!' %>
  </p>
<% end %>