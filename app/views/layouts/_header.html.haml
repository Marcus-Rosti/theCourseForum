%header
  %nav
    .container
      %a.brand{:href => "/"}
        %img{:src => "/images/logo.png"}
      = form_tag '/search/search', :method => "get", :class => "site-search" do
        .input-append.input-prepend
          %span.add-on
            %i.icon-search
          = text_field_tag :query, nil, :id => "searchbox"
          %span.add-on.orange= submit_tag("SEARCH")
          %span.add-on.orange= link_to 'LOGOUT', '/logout'
