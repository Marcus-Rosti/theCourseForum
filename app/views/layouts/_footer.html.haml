.footer-nav.hidden-xs
  .container
    .copyright
      theCourseForum Â© 2014
    .social-icons.hidden-xs
      = link_to image_tag("icons/tcf_facebook.png"), "http://www.facebook.com/theCourseForum", :target => '_blank'
      = link_to image_tag("icons/tcf_twitter.png"), "http://www.twitter.com/theCourseForum", :target => '_blank'
      = link_to image_tag("icons/tcf_reddit.png"), "http://www.reddit.com/r/theCourseForum", :target => '_blank'
    .btn-primary.btn.btn-sm.contact-us
      - if current_user
        - path = request.fullpath
        - url = (path.include?("/contact_us") ? "/contact_us" : path)
        = link_to "Contact Us", contact_us_path(:url => url)
      - else
        = link_to "Contact Us", contact_us_path
    .dropdown.dropdown-links.visible-xs
      %a.btn.btn-primary.btn-sm{"data-toggle" => "dropdown", :href => "#"} 
        %span.glyphicon.glyphicon-info-sign
        %b.caret
      %ul.dropdown-menu{"aria-labelledby" => "account-dropdown", :role => "menu"}
        %li
          = link_to "theBlog", "http://blog.thecourseforum.com", :target => "_blank"
        %li
          = link_to "About", about_path
        %li
          = link_to "Privacy", privacy_path
        %li
          = link_to "Terms", terms_path
    .dropdown.dropdown-media.visible-xs
      %a.btn.btn-primary.btn-sm{"data-toggle" => "dropdown", :href => "#"} 
        = image_tag "icons/share-icon.png", :class => "share-icon"
        %b.caret
      %ul.dropdown-menu{"aria-labelledby" => "account-dropdown", :role => "menu"}
        %li
          = link_to image_tag("icons/tcf_facebook.png"), "http://www.facebook.com/theCourseForum", :target => '_blank'
        %li
          = link_to image_tag("icons/tcf_twitter.png"), "http://www.twitter.com/theCourseForum", :target => '_blank'
        %li
          = link_to image_tag("icons/tcf_reddit.png"), "http://www.reddit.com/r/theCourseForum", :target => '_blank'
    .static-pages.hidden-xs
      .blog
        = link_to "theBlog", "http://blog.thecourseforum.com", :target => "_blank"
      .about
        = link_to "About", about_path
      .privacy
        = link_to "Privacy", privacy_path
      .terms
        = link_to "Terms", terms_path