.header-welcome-nav
  .container
    .navbar-header
      %button.navbar-toggle.btn{"data-target" => "#login-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.glyphicon.glyphicon-chevron-down
    .logo
      .welcome-header-fix.hidden-xs
      %a.brand.brand-login{:href => "/"}
        %img{:src => "/images/logo.png"}
    .collapse.navbar-collapse#login-collapse
      .login
        = form_for @user, :url => session_path(:user) do |f|
          .row.user-login
            .col-xs-4
              = f.email_field :email, :placeholder => "Email", :id => "login_email"
            .col-xs-4
              = f.password_field :password, :placeholder => "Password", :id => "login-password"
            .col-xs-4
              = f.submit "Login", :class => "login-button btn btn-primary"
          .row
            .col-xs-4
              = f.check_box :remember_me, :class => "login-remember-box"
              = f.label :remember_me, "Keep me signed in", :class => "login-remember"
            .col-xs-4
              = link_to "Forgot your password?", new_password_path(:user), :style => "color:#FFF;font-size:11px;"
