%header
  %nav
    .container
      %a.brand{:href => "/"}
        %img{:src => "/images/logo.png"}
      %div
        .login
          = form_for @user, :url => session_path(:user) do |f|
            = f.email_field :email, :placeholder => "Email", :id => "login_email"
            = f.password_field :password, :placeholder => "Password", :id => "login_password"
            = f.submit "Login", :class => "login-button btn btn-primary"
            = link_to "Forgot your password?", new_password_path(:user), :style => "color:#FFF"
